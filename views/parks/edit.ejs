<% include ../partials/header %> 

<div class="container">
    <div class="row">
        <h1 class="h1t">Edit <%= park.name%></h1>
        <div class="submit well well-lg">
            <form action="/parks/<%= park._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="park[name]" value="<%= park.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="park[image]" value="<%= park.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="park[state]" value="<%= park.state%>">
                </div>
                <div class="form-group">
                    <select name="park[rates]"  class="selectpicker form-control">
                      <option selected disabled>--rate--</option>
                      <!--<option value="5">5</option>                      -->
                      <!--<option value="4">4</option>-->
                      <!--<option value="3">3</option>-->
                      <!--<option value="2">2</option>-->
                      <!--<option value="1">1</option>-->
                      <% if(park.rates === "5") { %>
                          <option selected>5</option>
                      <% } else{ %>
                          <option>5</option>
                      <% } %>
                      <% if(park.rates === "4") { %>
                          <option selected>4</option>
                      <% } else{ %>
                          <option>4</option>
                      <% } %>
                      <% if(park.rates  === "3") { %>
                          <option selected>3</option>
                      <% } else{ %>
                          <option>3</option>
                      <% } %>
                      <% if(park.rates === "2") { %>
                          <option selected>2</option>
                      <% } else{ %>
                          <option>2</option>
                      <% } %>
                      <% if(park.rates  === "1") { %>
                          <option selected>1</option>
                      <% } else{ %>
                          <option>1</option>
                      <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="6" name="park[description]" ><%= park.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/parks">Go Back</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>
